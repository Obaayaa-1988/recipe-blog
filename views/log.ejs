</head>

<body>
    <!---------------------Header for Contact Page-->
    <header>
        <div class="navbar">
            <div class="mylogo">
                <h1>BELLA'S</h1s>

            </div>
            <nav>
                <ul>
                    <li><a href="/">HOME</a></li>
                    <li><a href="/about">ABOUT</a></li>
                    <li><a href="/contact">CONTACT</a></li>
                    <li><a href="/explore">EXPLORE</a></li>

                </ul>
            </nav>
        </div>
    </header>
    

    <!-------section2-->
    <section class="section-login">
        <div class="container">
            <div>
                <h2>Log In Form</h2>
            </div>
            <div class="log-content">
                <div class="log-image">
                    <img src="../images/image15.jpg">
                </div>
                <h3>WELCOME USER</h3>

                <form>
                    <div class="form-field">
                    <input type="text" name="username" class="input-log" placeholder="enter your name...">
                    <div id="user" style="color: tomato; text-align: center"></div> 
                    </div><br>
                    <div class="form-field">
                    <input type="email" name="email" class="input-log" placeholder="enter your email...">
                    <div id="mail" style="color: white; text-align: center"></div> 
                    </div> <br>
                    <div class="form-field">
                    <input type="password" name="password" class="input-log" id ="pass"placeholder="enter your password...">
                    <div id="pass" style="color: white; text-align: center"></div> 
                    </div> <br>
                    <button class="login-button" type="submit">Log In</button>

                </form>

                <div class="log-flex">
                    <div>
                        <p>Remember Me</p>
                    </div>

                    <div>
                        <p>Forgot Password?</p>
                    </div>

                </div>

            </div>

        </div>

    </section>



    <!------footer-->
    <footer>
        <div class="flex3">
            <div class="left-social">
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>

            </div>

           <!----- <div class="right-buttons">
