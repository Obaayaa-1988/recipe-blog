                <input type="text" class="input2" name="chef" placeholder="enter your name......... "><br>
                
                <label>Category</label>
                <input type="text" class="input2" name="category" placeholder="enter category of recipe......... "><br>

                <label>Ingredients</label>
                <textarea cols="80" rows="8" name="ingredients" placeholder="Recipe Ingredients"></textarea><br>
                <label>Instruction</label>
                <textarea cols="80" rows="8" name="instructions" placeholder="Instruction"></textarea>
                <input type="file" name="imageUpload" id="" class="file">
